
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox-title">
            <h5>Liquidación</h5>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-4">
                    <h2>Nuevo Calculo de Liquidación</h2>

                    <div class="form-group" id="datepicker">
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" id="fechaFin" readonly="readonly" class="form-control" placeholder="Ingrese la fecha de despido" value="">
                        </div>
                    </div>
                </div>
                <div hidden class="col-lg-6" id="cargarSpinner">

                </div>
                <div id="tiempoTrabajado" hidden>
                    <div class="col-lg-2">
                        <h1 class="text-center">Dias</h1>
                        <h3 class="text-success text-center col-md-offset-1" id="h3Dias">1</h3>
                    </div>
                    <div class="col-lg-2">
                        <h1 class="text-center">Meses</h1>
                        <h3 class="text-success text-center" id="h3Meses">11</h3>
                    </div>
                    <div class="col-lg-2">
                        <h1 class="text-center">Años</h1>
                        <h3 class="text-success text-center" id="h3Anios">3</h3>
                    </div>
                </div>
            </div>
            <div class="row">
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/Scripts/app/general/Liquidacion")
}


@section Styles {

    @Styles.Render("~/plugins/dataPickerStyles")
}
